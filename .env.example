# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///delivery_dashboard.db
# For PostgreSQL: postgresql://username:password@localhost:5432/delivery_db

# AI API Keys
ANTHROPIC_API_KEY=your-claude-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# n8n Integration
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=project-manager@example.com

# WhatsApp/Telegram (optional - configure with n8n)
WHATSAPP_API_KEY=
TELEGRAM_BOT_TOKEN=

# AI Confidence Thresholds
AI_AUTO_UPDATE_THRESHOLD=90
AI_REVIEW_THRESHOLD=60

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls,doc,docx

# Application Settings
CURRENCY=AED
TIMEZONE=Asia/Dubai
