# Docker Environment Variables Template
# Copy this to .env.production and fill in your values

# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production-use-random-64-chars

# Database Configuration (Production - PostgreSQL)
POSTGRES_DB=pkp_dashboard
POSTGRES_USER=pkp_admin
POSTGRES_PASSWORD=change-this-strong-password
N8N_DB=n8n

# Redis Configuration
REDIS_PASSWORD=change-this-redis-password

# AI API Keys
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
OPENAI_API_KEY=sk-proj-your-key-here

# n8n Configuration
N8N_TO_FLASK_API_KEY=your-n8n-to-flask-api-key
N8N_WEBHOOK_URL=https://n8n.yourdomain.com/webhook
N8N_BASE_URL=https://n8n.yourdomain.com
N8N_USERNAME=admin
N8N_PASSWORD=change-this-n8n-password
N8N_ENCRYPTION_KEY=your-n8n-encryption-key-minimum-10-chars
N8N_HOST=n8n.yourdomain.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
NOTIFICATION_EMAIL=notifications@yourdomain.com

# Application Settings
CURRENCY=AED
TIMEZONE=Asia/Dubai

# Domain Configuration
DASHBOARD_DOMAIN=dashboard.yourdomain.com
N8N_DOMAIN=n8n.yourdomain.com

# Optional: SMB File Server (if using)
SMB_SERVER_IP=192.168.1.100
SMB_SERVER_NAME=FILE-SERVER
SMB_SHARE_NAME=Projects
SMB_USERNAME=your-smb-user
SMB_PASSWORD=your-smb-password
SMB_DOMAIN=WORKGROUP
SMB_CLIENT_NAME=PKP-Dashboard
SMB_BASE_PATH=PKP_Projects
